<view class="index">
  <view class="index-hd">
    <image class="index-logo"  src="/resources/images/tencentcloud.png"/>
    <view class="index-desc" style="text-align:center">以下将演示小程序  云开发解决方案</view>
  </view>
  <view style="index-bd">
    <view style="text-align:center;" class="login" wx:if="{{!userInfo}}">
      <button class="weui-btn" open-type="getUserInfo" bindgetuserinfo="getUserInfo" type="primary">登录</button>
    </view>
    <button type="primary" bindtap="start" class="weui-btn" wx:if="{{userInfo}}">检测</button>
  </view>
</view>