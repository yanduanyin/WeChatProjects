/* pages/home/home.wxss */
.wrapper {
  width: 100%;
  position: relative;
  overflow: hidden;
}
.top-box {
  width: 100%;
}
.user-juan-box {
  transform: translateY(-50%);
  margin: 0 auto;
  background-color: #fff;
  border-radius: 20rpx;
  width: 80%;
  height: 60%;
  box-shadow: 10rpx 15rpx 10rpx rgb(158, 158, 158);
}
.user-box {
  transform: translateY(-30%);
  width: 30%;
  height: 50%;
  margin: 0 auto;
}
.user-left {
  display: inline-block;
}
.user-right {
  display: inline-block;
}
.juan-box {
  margin: 0 auto;
  width: 80%;
  display: flex;
  padding-bottom: 20rpx;
}
.juan-bg {
  background-color: rgb(211, 213, 214);
  text-align: center;
  border-radius: 20rpx;
  flex: 1;
  margin: 0 5rpx;
}
.line {
  width: 100%;
  height: 15rpx;
  position: absolute;
  top: 450rpx;
  left: 0;
  background-color: rgb(201, 202, 202);
}
.lists-container {
  display: flex;
  flex-flow: column;
  height: 700rpx;
  /* align-items: center; */
}
.item-box {
  transform: translateY(-25%);
  height: 100rpx;
  padding-top: 30rpx;
  margin-left: 20rpx;
  border-bottom: 5rpx solid rgb(180, 180, 180);
}
.text-right {
  float: right;
  display: flex;
}
.icon {
  margin: 20rpx 30rpx 0 20rpx;
  width: 20rpx;
  height: 20rpx;
  border-right: 6rpx solid rgb(146, 145, 145);
  border-bottom: 6rpx solid rgb(146, 145, 145);
  transform: rotate(-45deg);
}
