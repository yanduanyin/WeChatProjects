<!--pages/index/index.wxml-->
<!-- 轮播图部分 -->
<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" 
  interval="{{interval}}" duration="{{duration}}">
  <block wx:for="{{imgUrls}}" wx:key="{{index}}">
    <swiper-item>
      <image src="{{item}}" class="slide-image" width="355" height="150" />
    </swiper-item>
  </block>
</swiper>
<view class="wrapper">
  <view class="content">
    <navigator url="../circle/circle" hover-class="navigator-hover" class="box-big" style="background-color: #92cf68">
      <text style="line-height: 300rpx;">兑换卷圈</text>
    </navigator >
    <navigator url="../interesting/interesting" hover-class="navigator-hover" class="box-big" style="background-color: #58b5e1">
      <text style="line-height: 300rpx;">趣兑换</text>
    </navigator >
    <navigator url="../myvolume/myvolume" hover-class="navigator-hover" class="box-big" style="background-color: #fcc954">
      <text style="line-height: 300rpx;">我的兑换卷</text>
    </navigator >
    <navigator url="../mypurse/mypurse" hover-class="navigator-hover" class="box-big" style="background-color: #f8656b">
      <text style="line-height: 300rpx;">我的钱包</text>
    </navigator >
  </view>
</view>

